{
    "name": "Ganeti Dev Container",
    "image": "ganeti/ci:bookworm-py3",

    "customizations":{
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-python.pylint",

                "haskell.haskell"
            ],
            "settings": {
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    }
}
