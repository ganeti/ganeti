set -e

FAKEROOT='@FAKEROOT@'

filename=$1

execasroot() {
  if [[ -z "$FAKEROOT" ]]; then
    echo "'fakeroot' not found at configure time" >&2
    exit 1
  fi
  exec "$FAKEROOT" "$@"
}

case "$filename" in
  *-runasroot.py) execasroot $PYTHON "$@" ;;
  *.py) exec $PYTHON "$@" ;;
  *-runasroot) execasroot "$@" ;;
  *) exec "$@" ;;
esac
