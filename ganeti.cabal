    , zlib                          >= 0.5.3.3    && < 0.8

  If flag(network_bsd)
    Build-Depends:
        network                     >= 2.9        && < 3.3
      , network-bsd                 >= 2.8        && < 2.9
  Else
    Build-Depends:
        network                     >= 2.3.0.13   && < 2.9

  If flag(mond)
    Build-Depends:
        PSQueue                       >= 1.1        && < 1.3
      , snap-core                     >= 1.0.0
      , snap-server                   >= 1.0.0
    Exposed-Modules:
      Ganeti.Monitoring.Server

  If flag(metad)
    Build-Depends:
        snap-core                     >= 0.8.1
      , snap-server                   >= 0.8.1
    Exposed-Modules:
      Ganeti.Metad.ConfigServer
      Ganeti.Metad.Server
      Ganeti.Metad.WebServer


